<div class="row">
  <%= render 'shared/menu' %>

  <div class="small-12 large-9 columns">
    <div class="panel">
      <h1 style="text-align:center;">Tumblr</h1>

      <h3>Posts</h3>
      <% @feed.entries.each do |post| %>
        <span class="secondary radius label"><%= post.published.strftime('%B %e, %Y') %></span>
        <h4><a href="<%= post.url %>" target="_blank"><%= post.title %></a></h4>
        <p><%= post.summary.html_safe %></p>
        <p style="text-align:right;">
          <% post.categories.each do |category| %>
            <a href="http://<%= TUMBLR_USER_NAME %>.tumblr.com/tagged/<%= category %>" target="_blank">
              <span class="radius label"><%= category %></span>
            </a>
          <% end %>
        </p>
        <hr>
      <% end %>

      <h6><a href="http://<%= TUMBLR_USER_NAME %>.tumblr.com/" target="_blank"><%= YOUR_NAME %> @ Tumblr</a></h6>
    </div>
  </div>
</div>
